<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5FFEC"
    android:id="@+id/addnew">
    <!--Thanh tiêu đề-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFEB3B">

        <!--Icon bên trái-->
        <ImageView
            android:id="@+id/imgLogoApp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/iconapp"
            android:contentDescription="@string/app_name" />

        <!--Tiêu đề-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản Lý Kho Hàng Offline"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--Title Main Screen-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới sản phẩm"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#FFFFFF"/>
    <!--Đường viền border bottom-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#007FBA"/>
    <!--Edit Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AAE4F1"
        android:layout_margin="20sp">
        <!--Title-->
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Sản Phẩm"
            android:textSize="24sp"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="#AAE4F1">
            <!--Id-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Sản Phẩm: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/botron"
                android:hint="Nhập id"
                android:paddingStart="10sp"/>
            <!--Name-->
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/botron"
                android:hint="Nhập tên sản phẩm"
                android:paddingStart="10sp"/>
            <!--Quantity-->
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Lượng Sản Phẩm: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtQuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/botron"
                android:hint="Nhập số lượng sản phẩm"
                android:paddingStart="10sp"/>
            <!--Status-->
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng Thái: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spStatus"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/botron"
                android:entries="@array/item_list" />
            <!--Chọn kho-->
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn Kho: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spKho"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/botron"/>
            <!--Image-->
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hình ảnh: "
                android:textSize="18sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/ivImg_Add"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:scaleType="centerInside"
                android:src="@drawable/botron_img"
                android:clickable="true"
                android:focusable="true"/>
            <!--Button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">
                <!--Thêm mới-->
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm mới"
                    android:textSize="20dp"
                    android:backgroundTint="#00FF11"/>
                <!--Cancel-->
                <Button
                    android:id="@+id/btnCancelAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#FF1100"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>